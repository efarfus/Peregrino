<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageCar"
        android:layout_width="244dp"
        android:layout_height="148dp"
        android:src="@drawable/carro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textApelido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apelido"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCar" />

    <TextView
        android:id="@+id/textCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carro Modelo"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textApelido" />

</androidx.constraintlayout.widget.ConstraintLayout>
